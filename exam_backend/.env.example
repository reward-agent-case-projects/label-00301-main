# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (PostgreSQL 推荐，支持全文检索)
DATABASE_URL=postgres://user:password@localhost:5432/exam_db
# For MySQL: mysql://user:password@localhost:3306/exam_db

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT Settings
JWT_ACCESS_TOKEN_LIFETIME=60  # minutes
JWT_REFRESH_TOKEN_LIFETIME=7  # days

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1

# ============ 对象存储配置 ============
# 存储后端选择: 'local', 'minio', 's3', 'aliyun_oss'
FILE_STORAGE_BACKEND=local

# ---------- MinIO 配置 ----------
# 使用 MinIO 时设置 FILE_STORAGE_BACKEND=minio
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_ENDPOINT=http://localhost:9000
MINIO_REGION=us-east-1
MINIO_USE_SSL=False
MINIO_VERIFY_SSL=False
MINIO_BUCKET=exam-files
MINIO_ATTACHMENTS_BUCKET=exam-attachments
MINIO_MEDIA_BUCKET=exam-media

# ---------- AWS S3 配置 ----------
# 使用 S3 时设置 FILE_STORAGE_BACKEND=s3
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_STORAGE_BUCKET_NAME=exam-bucket
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=
AWS_ATTACHMENTS_BUCKET=exam-attachments
AWS_MEDIA_BUCKET=exam-media

# ---------- 阿里云 OSS 配置 ----------
# 使用 OSS 时设置 FILE_STORAGE_BACKEND=aliyun_oss
ALIYUN_OSS_ACCESS_KEY_ID=your-access-key
ALIYUN_OSS_ACCESS_KEY_SECRET=your-secret-key
ALIYUN_OSS_ENDPOINT=https://oss-cn-hangzhou.aliyuncs.com
ALIYUN_OSS_REGION=oss-cn-hangzhou
ALIYUN_OSS_BUCKET_NAME=exam-files
ALIYUN_OSS_ATTACHMENTS_BUCKET=exam-attachments
ALIYUN_OSS_MEDIA_BUCKET=exam-media
ALIYUN_OSS_CUSTOM_DOMAIN=

# ============ Elasticsearch 配置（可选，用于高级搜索） ============
USE_ELASTICSEARCH=False
ELASTICSEARCH_HOSTS=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_QUESTION_INDEX=questions

# Email (Optional)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password

# Logging
LOG_LEVEL=DEBUG
